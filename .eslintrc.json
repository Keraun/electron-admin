{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "prettier",
    "plugin:prettier/recommended",
    "plugin:react/recommended"
  ],
  "env": {
    "node": true,
    "browser": true,
    "jest": true
  },
  "rules": {
    "prettier/prettier": [
      "error", 
      {
        "singleQuote": true, 
        "no-console": "off",
        "semi": false
      }
    ]
  }
}